main = none

#include include/defines.mk

MODULES = src
MODULES_ADDITIONAL = docs config include lib man bin etc

all::
	@echo "+-----------------------------------------------+"
	@echo "|                                               |"
	@echo "|       Nothing to do ... see README            |"
	@echo "|                                               |"
	@echo "+-----------------------------------------------+"	

clean::
	rm -f *~ *.o .*~
	for dir in $(MODULES); do (cd $$dir && $(MAKE) $@); done
	for dir in $(MODULES_ADDITIONAL); do (cd $$dir && $(MAKE) $@); done

distclean: clean
	rm -f *~ *.o 
	for dir in $(MODULES); do (cd $$dir && $(MAKE) $@); done
	for dir in $(MODULES_ADDITIONAL); do (cd $$dir && $(MAKE) $@); done




